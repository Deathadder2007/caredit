# Configuration de l'environnement CareCredit Backend

# Base de données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=caredit
DB_USER=winner
DB_PASSWORD=winner2007

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Serveur
PORT=5000
NODE_ENV=development

# Sécurité
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Limites de transaction (en CFA)
DEFAULT_DAILY_LIMIT=1000000
DEFAULT_MONTHLY_LIMIT=5000000
DEFAULT_SINGLE_TRANSACTION_LIMIT=500000

# Frais de transaction (en CFA)
TRANSFER_FEE=50
WITHDRAWAL_FEE=100

# Configuration email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration SMS (optionnel)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here
FLUTTERWAVE_ENCRYPTION_KEY=your_flutterwave_encryption_key_here
FLUTTERWAVE_WEBHOOK_SECRET=your_webhook_secret_here
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/v3

# Frontend URL (pour les redirections)
FRONTEND_URL=http://localhost:3000